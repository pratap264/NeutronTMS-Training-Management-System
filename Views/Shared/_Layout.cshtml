@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* <div style="display: flex;flex-direction:row;"> *@
    <title style ="color:white;">@ViewData["Title"] - NeutronTMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NeutronTMS.styles.css" asp-append-version="true" />
</head>

<body >
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light-subtle bg-light-subtle border-bottom box-shadow mb-3" style="background-color:#00A6CA;">
            <div class="container-fluid">
                <img src="https://play-lh.googleusercontent.com/i5wO0Kqj27vlkAwB7dOjQ2AugmivZNn3CuIh6aWeFqdl8g1VWGLJdqTFTdqIkR5-JA=w480-h960-rw" alt="" style =" height:3em;border-radius: 50%;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: white;margin-left:0.45em; ">NeutronTMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="margin-left:2em;" >
                    <ul class="navbar-nav flex-grow-1" >
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index" >Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Projects"
                                asp-action="Index">Projects</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Training"
                                asp-action="Index">Trainings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="UserRoles"
                                asp-action="Index">Peoples</a>
                            </li>
                            @if ((User.IsInRole("SuperAdmin")))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="RoleManager"
                                asp-action="Index">Role Manager</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-light"asp-area="" asp-controller="Assessment"
                                asp-action="Index">Assessments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Feedback"
                                asp-action="Index">Feedbacks</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:#00A6CA">
        <div class="container" style="color:white">
            &copy; 2023 - NeutronTMS - <a style="color:white" href="https://transunion.sharepoint.com/sites/thehub/Pages/default.aspx">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
